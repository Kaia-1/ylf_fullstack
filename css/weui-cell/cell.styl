// .cell
//   border-top 1px solid green
//   border-right  1px solid green
//   width 20px
//   height 20px
//   transform rotate(45deg)
*
  margin 0
  padding 0
.weui-cell
    padding 16px
    text-decoration none
    position relative
    display flex
    .weui-cell__bd//子元素，用tab空格
        flex  1 //flex 1 主体部分，随着弹性布局划分
    .weui-cell__ft
        padding-right 22px   
        position relative
        &::after
            content ''//结束伪元素
        // &::before
        //     content'开始伪元素' //伪元素是占位符
            display block
            width 12px
            height 12px
            border 1px solid rgba(0,0,0,.5)
            border-bottom none 
            border-left none 
            transform rotate(45deg)
            position absolute
            top 2px

